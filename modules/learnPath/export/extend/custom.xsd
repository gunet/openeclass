    <xs:import namespace="http://ltsc.ieee.org/xsd/LOM"/>

    <!-- Model group declarations -->

    <xs:group name="customElements">
        <xs:choice>
            <xs:group ref="lom:customElements"/>
        </xs:choice>
    </xs:group>

</xs:schema>
