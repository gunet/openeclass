<?xml version="1.0" encoding="UTF-8"?>

<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.openeclass.org"
           xmlns="http://www.openeclass.org"
           elementFormDefault="qualified">
    
